{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "DOM",
            "es2017",
            "esnext.asynciterable"
        ],
        "moduleResolution": "Node",
        "watch": true
    },
    "exclude": [
        "node_modules"
    ]
}